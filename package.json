{
  "name": "v4-ui",
  "version": "1.0.0",
  "private": false,
  "author": "PoolTogether Inc.",
  "scripts": {
    "reinstall": "rm -rf .next out ./node_modules && yarn cache clean && yarn",
    "dev": "npm-run-all --parallel start:app",
    "start:app": "PORT=3000 node --max-old-space-size=8192 server.js",
    "build": "NODE_OPTIONS=\"--max_old_space_size=65536\" next build && next export && yarn postexport",
    "postexport": "node post-export.js",
    "dist": "yarn build",
    "export": "next export",
    "distrelease": "export NEXT_JS_RELEASE_VERSION=$(sentry-cli releases propose-version) && yarn dist && yarn sentryrelease",
    "sentryrelease": "./scripts/sentry-release.sh",
    "start": "NODE_ENV=production PORT=80 node server.js",
    "test": "jest",
    "testcov": "jest --coverage --coverageDirectory=coverage && open ./coverage/index.html",
    "watch": "yarn run test --watch"
  },
  "jest": {
    "collectCoverageFrom": [
      "lib/**/*.{ts,js}"
    ],
    "coverageReporters": [
      "text",
      "html"
    ],
    "moduleNameMapper": {
      "^lib/(.*)$": "<rootDir>/lib/$1",
      "\\.(jpg|jpeg|png|gif|eot|otf|webp|svg|ttf|woff|woff2|mp4|webm|wav|mp3|m4a|aac|oga)$": "<rootDir>/__mocks__/fileMock.js",
      "\\.(css|less)$": "identity-obj-proxy"
    },
    "verbose": true
  },
  "devDependencies": {
    "@next/bundle-analyzer": "^11.0.1",
    "@sentry/cli": "^1.72.2",
    "@testing-library/react-hooks": "^7.0.1",
    "@types/node": "^16.7.2",
    "@types/react": "^17.0.19",
    "babel-jest": "^27.0.6",
    "colors": "^1.4.0",
    "csvtojson": "^2.0.10",
    "express": "^4.17.1",
    "jest": "^27.0.6",
    "nock": "^13.1.1",
    "npm-run-all": "^4.1.5",
    "typescript": "^4.4.4"
  },
  "dependencies": {
    "@babel/plugin-transform-react-jsx": "^7.14.5",
    "@pooltogether/bnc-onboard": "1.36.0-b",
    "@pooltogether/bnc-onboard-hooks": "^1.1.1",
    "@pooltogether/current-pool-data": "^3.7.2",
    "@pooltogether/etherplex": "^1.1.4",
    "@pooltogether/evm-chains-extended": "^0.6.4-beta.1",
    "@pooltogether/hooks": "^1.5.1",
    "@pooltogether/pooltogether-contracts": "^3.4.4",
    "@pooltogether/react-components": "^1.6.30",
    "@pooltogether/utilities": "^0.3.8",
    "@pooltogether/v4-js-client": "^0.9.7",
    "@pooltogether/v4-pool-data": "^1.6.0",
    "@reach/dialog": "^0.15.3",
    "@reach/menu-button": "^0.15.3",
    "@reach/tooltip": "^0.15.3",
    "@reach/visually-hidden": "^0.15.2",
    "@sentry/react": "^6.17.5",
    "@sentry/tracing": "^6.17.5",
    "autoprefixer": "^10.3.1",
    "beautiful-react-hooks": "^1.0.2",
    "classnames": "^2.3.1",
    "eth-revert-reason": "^1.0.3",
    "ethers": "^5.4.6",
    "fathom-client": "^3.1.0",
    "feather-icons-react": "^0.5.0",
    "framer-motion": "^4.1.17",
    "graphql": "^15.5.1",
    "graphql-request": "^3.5.0",
    "graphql-tag": "^2.12.5",
    "i18next": "^20.3.5",
    "i18next-browser-languagedetector": "^6.1.2",
    "i18next-locize-backend": "^4.2.3",
    "i18next-node-locize-backend": "^3.1.2",
    "jotai": "^1.4.3",
    "js-cookie": "^3.0.0",
    "lodash": "^4.17.21",
    "lodash.clonedeep": "^4.5.0",
    "next": "^10.2.3",
    "next-images": "^1.8.1",
    "ordinal": "^1.0.3",
    "postcss-custom-properties-fallback": "^1.0.1",
    "postcss-easy-import": "^3.0.0",
    "react": "17.0.2",
    "react-device-detect": "^1.17.0",
    "react-dom": "17.0.2",
    "react-hook-form": "^7.20.5",
    "react-i18next": "11.11.4",
    "react-query": "^3.34.0",
    "react-query-devtools": "^2.6.3",
    "react-rewards": "^1.1.2",
    "react-spring-bottom-sheet": "^3.4.0",
